<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="viewmodel.DB_GUI_Controller">
    <top>
        <VBox spacing="10" style="-fx-padding: 10;">
            <HBox spacing="10">
                <TextField fx:id="txtFirstName" promptText="First Name"/>
                <TextField fx:id="txtLastName" promptText="Last Name"/>
                <TextField fx:id="txtDepartment" promptText="Department"/>
            </HBox>
            <HBox spacing="10">
                <ComboBox fx:id="cbxMajor" promptText="Select Major"/>
                <TextField fx:id="txtEmail" promptText="Email"/>
                <TextField fx:id="txtImageUrl" promptText="Image URL"/>
            </HBox>
            <HBox spacing="10">
                <Button text="Add" fx:id="btnAdd" onAction="#addPerson"/>
                <Button text="Edit" fx:id="btnEdit" onAction="#editButtonClick"/>
                <Button text="Delete" fx:id="btnDelete" onAction="#deleteButtonClick"/>
                <Button text="Import CSV" onAction="#importCSV"/>
                <Button text="Export CSV" onAction="#exportCSV"/>
            </HBox>
            <Label fx:id="lblStatus" text="Status: Ready"/>
        </VBox>
    </top>

    <center>
        <TableView fx:id="tv" prefHeight="400">
            <columns>
                <TableColumn fx:id="colFirstName" text="First Name"/>
                <TableColumn fx:id="colLastName" text="Last Name"/>
                <TableColumn fx:id="colDepartment" text="Department"/>
                <TableColumn fx:id="colMajor" text="Major"/>
                <TableColumn fx:id="colEmail" text="Email"/>
                <TableColumn fx:id="colImage" text="Image"/>
            </columns>
        </TableView>
    </center>

    <right>
        <PieChart fx:id="pieChart" prefWidth="300" />
    </right>
</BorderPane>
